{
  "compilerOptions": {
    "baseUrl": ".",                // Allow root-based imports
    "paths": {
      "@helpers/*": ["helpers/*"], // Helper files
      "@fixtures/*": ["fixtures/*"], // Fixture files
      "@pages/*": ["tests/UI/pages/*"] // Page Objects
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node"
  }
}
